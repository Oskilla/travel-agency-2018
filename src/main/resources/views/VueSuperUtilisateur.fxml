<AnchorPane fx:id="idsuperutilisateur" prefHeight="400.0" prefWidth="630.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label layoutX="137.0" layoutY="22.0" text="Bienvenue Super Utilisateur" textAlignment="CENTER">
            <font>
                <Font size="30.0" />
            </font></Label>
        <Label layoutX="111.0" layoutY="67.0" text="Gestion des utilisateurs (ajout, modification et suppression)" textAlignment="CENTER">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <TableView fx:id="idlistutilisateur" editable="true" layoutX="34.0" layoutY="125.0" prefHeight="207.0" prefWidth="229.0">
            <columns>
                <TableColumn fx:id="idnom" prefWidth="228.0" text="Utilisateurs" />
            </columns>
        </TableView>
        <Button layoutX="51.0" layoutY="338.0" mnemonicParsing="false" onAction="#miseajour" prefHeight="25.0" prefWidth="196.0" text="Afficher le contenu de la table" />
        <Button layoutX="298.0" layoutY="209.0" mnemonicParsing="false" onAction="#ajoututilisateur" prefHeight="26.0" prefWidth="196.0" text="Ajouter l'utilisateur" />
        <TextField fx:id="idnouveaunom" layoutX="298.0" layoutY="127.0" promptText="Nom" />
        <TextField fx:id="idnouveaumdp" layoutX="454.0" layoutY="127.0" promptText="Mot de passe" />
        <TextField fx:id="idnouveaurole" layoutX="365.0" layoutY="159.0" prefHeight="26.0" prefWidth="171.0" promptText="Role" />
        <Label fx:id="idmanquerole" layoutX="389.0" layoutY="185.0" text="Agent / Administrateur ?" visible="false" />
