            <graphic>
                <ImageView fitHeight="27.0" fitWidth="62.0" layoutX="519.0" layoutY="53.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/images/exit.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Label fx:id="idmanquechamp" layoutX="389.0" layoutY="235.0" prefHeight="17.0" prefWidth="131.0" text="Remplir tous les champs" visible="false" />
        <Button layoutX="298.0" layoutY="338.0" mnemonicParsing="false" onAction="#gestionvoyage" prefHeight="25.0" prefWidth="196.0" text="Gestion des voyages" />
        <Button layoutX="298.0" layoutY="252.0" mnemonicParsing="false" onAction="#modifier" prefHeight="25.0" prefWidth="196.0" text="Mofidier l'utilisateur selectionné" />
    </children>
